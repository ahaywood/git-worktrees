#!/usr/bin/env bash

if [ -z "$1" ]; then
  echo "Usage: worktree <branch-name>"
  exit 1
fi

# Get the directory where this script lives
script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
project_root="$(dirname "$script_dir")"

cd "$project_root" && ./new-worktree.sh -b amydutton/"$1" -B dev "$1"

